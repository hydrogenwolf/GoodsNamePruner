@{
    ViewBag.Title = "상품명 변환";
}

<h2>@ViewBag.Title.</h2>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        var isAdvancedUpload = function () {
            var div = document.createElement('div');
            return (('draggable' in div) || ('ondragstart' in div && 'ondrop' in div)) && 'FormData' in window && 'FileReader' in window;
        }();

        var $form = $('.box');
        var $input = $form.find('input[type="file"]');

        if (isAdvancedUpload) {
            $form.addClass('has-advanced-upload');

            var droppedFiles = false;

            $form.on('drag dragstart dragend dragover dragenter dragleave drop', function (e) {
                e.preventDefault();
                e.stopPropagation();
            })
            .on('dragover dragenter', function () {
                $form.addClass('is-dragover');
            })
            .on('dragleave dragend drop', function () {
                $form.removeClass('is-dragover');
            })
            .on('drop', function (e) {
                var files = e.originalEvent.dataTransfer.files;
                $input.prop('files', files);
                $(this).unbind('submit').submit()
                $form.trigger('submit');


            });

            $input.on('change', function (e) { // when drag & drop is NOT supported
                $form.trigger('submit');
            });
        }
    });
</script>

@using (Html.BeginForm("Convert", "Home", FormMethod.Post, new { @class = "box", enctype = "multipart/form-data" }))
{
    <div class="box__input">
        <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43"><path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z" /></svg>
        <input type="file" name="file" id="file" class="box__file" />
        <label for="file"><strong>변환할 파일을 선택</strong><span class="box__dragndrop">하거나 이곳으로 끌어 놓으십시오</span>.</label>
        <button type="submit" class="box__button">Upload</button>
    </div>
    <div class="box__uploading">Uploading&hellip;</div>
    <div class="box__success">Done!</div>
    <div class="box__error">Error!</div>
}
